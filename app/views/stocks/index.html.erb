<h3>在庫</h3>

<%= link_to '新規作成', new_stock_path, class: "btn btn-primary btn-sm" %>

<br>
<br>

<% if false %>
  <%= form_with(model: @stock, local: true) do |f| %> 
    <% if @stock.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @stock.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :name, id: :stock_name %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit class: "btn btn-primary btn-sm" %>
    </div>
    <br>
  <% end %> 
<% end %>


<div class="table-responsive">
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>日付</th>
        <th>商品</th>
        <th>数量</th>
        <th>入庫ステータス</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @stocks.each do |stock| %>
        <tr>
          <td><%= l stock.date %></td>
          <td><%= stock.product.name %></td>
          <td><%= stock.quantity %></td>
          <td><%= stock.in_status %></td>
          <td class="btn-in-table">
            <%= link_to 'Show', stock, class: "btn btn-info btn-sm" %>
          </td>
          <td class="btn-in-table">
            <%= link_to 'Edit', edit_stock_path(stock), class: "btn btn-info btn-sm" %>
          </td>
          <td class="btn-in-table">
            <%= link_to 'Destroy', stock, method: :delete, data: { confirm: '本当によろしいですか?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>