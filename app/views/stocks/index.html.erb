<h1>Stocks</h1>

<hr>

<%= link_to 'New Stock', new_stock_path %>

<hr>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Date</th>
      <th>Quantity</th>
      <th>In status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.product.name %></td>
        <td><%= stock.date %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.in_status %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: '本当によろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
