<h1>News</h1>

<hr>

<%= link_to 'New News', new_news_path %>

<hr>

<table>
  <thead>
    <tr>
      <th>News type</th>
      <th>Title</th>
      <!-- <th>Content</th> -->
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.news_type.name %></td>
        <td><%= news.title %></td>
        <td><%#= news.content %></td>
        <td><%= news.state %></td>
        <td><%= link_to 'Show', news, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_news_path(news), class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: '本当によろしいですか?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
