<%= form_with(model: news, local: true) do |f| %>
  <% if news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :news_type_id %>
    <%= f.collection_select :news_type_id, NewsType.all, :id, :name, include_blank: true %>
  </div>


  <div class="field">
    <%= f.label :title %>
    <%= f.text_area :title, id: :news_title %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, id: :news_content %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.number_field :state, id: :news_state %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
