<h1>Brands</h1>

<hr>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to 'Show', brand, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand), class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: '本当によろしいですか?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_brand_path %>
