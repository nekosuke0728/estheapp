<h3>ニュース分類</h3>

<%= form_with(model: @news_type, local: true) do |f| %>
  <% if @news_type.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @news_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_field :name, id: :news_type_name %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-sm" %>
  </div>
  <br>
<% end %>

<div class="table-responsive">
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @news_types.each do |news_type| %>
        <tr>
          <td><%= news_type.name %></td>
          <td class="btn-in-table"><%= link_to '詳細', news_type, class: "btn btn-info btn-sm" %></td>
          <td class="btn-in-table"><%= link_to '編集', edit_news_type_path(news_type), class: "btn btn-info btn-sm" %></td>
          <td class="btn-in-table"><%= link_to '削除', news_type, method: :delete, data: { confirm: '本当によろしいですか?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
