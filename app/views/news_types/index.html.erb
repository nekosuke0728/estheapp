<h1>News Types</h1>

<hr>

<%= link_to 'New News Type', new_news_type_path %>

<hr>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_types.each do |news_type| %>
      <tr>
        <td><%= news_type.name %></td>
        <td><%= link_to 'Show', news_type, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_news_type_path(news_type), class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', news_type, method: :delete, data: { confirm: '本当によろしいですか?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
