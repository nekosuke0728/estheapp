<h1>Products</h1>

<hr>

<%= link_to 'New Product', new_product_path %>

<hr>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Category</th>
      <th>Price</th>
      <th>Description</th>
      <th>Status</th>
      <th>ItemType</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.brand.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.status %></td>
        <td><%= product.item_type.name %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: '本当によろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
