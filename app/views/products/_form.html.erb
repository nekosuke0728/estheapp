<%= form_with(model: product, local: true) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :product_name %>
  </div>

  <div class="field">
    <%= f.label :brand_id %>
    <%= f.collection_select :brand_id, Brand.all, :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, id: :product_price %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, id: :product_description %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.check_box :status, id: :product_status %>
  </div>

  <div class="field">
    <%= f.label :item_type_id %>
    <%= f.collection_select :item_type_id, ItemType.all, :id, :name, include_blank: true %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
