<p id="notice"><%= notice %></p>

<h1>Esthe Menus</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Time frame</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @esthe_menus.each do |esthe_menu| %>
      <tr>
        <td><%= esthe_menu.name %></td>
        <td><%= esthe_menu.time_frame %></td>
        <td><%= esthe_menu.description %></td>
        <td><%= esthe_menu.price %></td>
        <td><%= link_to 'Show', esthe_menu %></td>
        <td><%= link_to 'Edit', edit_esthe_menu_path(esthe_menu) %></td>
        <td><%= link_to 'Destroy', esthe_menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

