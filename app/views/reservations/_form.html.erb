      <% end %>
      </ul>
    </div>
  <% end %>

  <hr>

  <div class="field">
    <%= f.label :user_id, "ユーザーID" %>
    <%= f.collection_select :user_id, User.all, :id, :id, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :staff_id %>
    <%= f.collection_select :staff_id, Staff.all, :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :esthe_menu_id %>
    <%= f.collection_select :esthe_menu_id, EstheMenu.all, :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :start_at %>
    <%= f.datetime_select :start_at, minute_step: 15, id: :reservation_start_at %>
  </div>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_area :comment, id: :reservation_comment %>
