<h1>Categories</h1>

<hr>

<%= link_to 'New Category', new_category_path %>

<hr>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: '本当によろしいですか?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
