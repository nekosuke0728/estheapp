<h3>肌のお悩みタイプ</h3>

<%= form_with(model: @skin_trouble_type, local: true) do |f| %>

  <% if @skin_trouble_type.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @skin_trouble_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, id: :skin_trouble_type_name %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-sm" %>
  </div>
  <br>
<% end %>


<div class="table-responsive">
  <table class="table table-condensed table-hover">
    <tbody>
      <% @skin_trouble_types.each do |skin_trouble_type| %>
        <tr>
          <td>
            <%= skin_trouble_type.name %>
          </td>
          <td class="btn-in-table">
            <%= link_to '編集', skin_trouble_types_path(id: skin_trouble_type.id), class: "btn btn-info btn-sm" %>
          </td>
           <td class="btn-in-table">
            <%= link_to '削除', skin_trouble_type, method: :delete, data: { confirm: '削除してよろしいですか?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
