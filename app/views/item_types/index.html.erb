<h1>Item Types</h1>

<hr>

<%= link_to 'New Item Type', new_item_type_path %>

<hr>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_types.each do |item_type| %>
      <tr>
        <td><%= item_type.category.name %></td>
        <td><%= item_type.name %></td>
        <td><%= link_to 'Show', item_type, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_item_type_path(item_type), class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', item_type, method: :delete, data: { confirm: '本当によろしいですか?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
