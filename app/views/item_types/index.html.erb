<h3>アイテムタイプ</h3>

<%= link_to '新規作成', new_item_type_path, class: "btn btn-primary btn-sm" %>

<br>
<br>

<div class="table-responsive">
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>アイテムタイプ</th>
        <th>カテゴリ</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @item_types.each do |item_type| %>
        <tr>
          <td><%= item_type.name %></td>
          <td><%= item_type.category.name %></td>
          <td class="btn-in-table"><%= link_to '詳細', item_type, class: "btn btn-info btn-sm" %></td>
          <td class="btn-in-table"><%= link_to '編集', edit_item_type_path(item_type), class: "btn btn-info btn-sm" %></td>
          <td class="btn-in-table"><%= link_to '削除', item_type, method: :delete, data: { confirm: '削除してよろしいですか?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
